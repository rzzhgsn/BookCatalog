@model Client.ViewModels.LoginVM

@{
	ViewData["Title"] = "Login";
	Layout = "_SignLayout";
}

<h1 class="text-center">Login</h1>

@*<h4>LoginVM</h4>*@
<hr />
@*<div class="row">
    <div class="">*@
<form asp-action="Login">
	<div asp-validation-summary="ModelOnly" class="text-danger"></div>
	<div class="form-group">
		@*<label asp-for="Email" class="control-label"></label>*@
		<input asp-for="Email" type="text" class="form-control rounded-left" placeholder="Email">
		<span asp-validation-for="Email" class="text-danger"></span>
	</div>
	<div class="form-group">
		@*<label asp-for="Password" class="control-label"></label>*@
		<input asp-for="Password" type="password" class="form-control rounded-left" placeholder="Password">
		<span asp-validation-for="Password" class="text-danger"></span>
	</div>
	<div class="form-group">
		<input type="submit" value="Login" class="btn btn-primary rounded submit p-3 px-5" id="submit" />
	</div>
</form>
