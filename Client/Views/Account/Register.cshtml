@model Client.ViewModels.RegisterVM

@{
	ViewData["Title"] = "Register";
	Layout = "_SignLayout";
}

<h1 class="text-center">Register</h1>
<hr />
@*<div class="row">
    <div class="col-md-4">*@
<form asp-action="Register">
	<div asp-validation-summary="ModelOnly" class="text-danger"></div>
	<div class="form-group">
		@*<label asp-for="FirstName" class="control-label"></label>*@
		<input asp-for="FirstName" class="form-control rounded-left" placeholder="FirstName">
		<span asp-validation-for="FirstName" class="text-danger"></span>
	</div>
	<div class="form-group">
		@*<label asp-for="LastName" class="control-label"></label>*@
		<input asp-for="LastName" class="form-control rounded-left" placeholder="LastName">
		<span asp-validation-for="LastName" class="text-danger"></span>
	</div>
	<div class="form-group">
		@*<label asp-for="Email" class="control-label"></label>*@
		<input asp-for="Email" class="form-control rounded-left" placeholder="Email">
		<span asp-validation-for="Email" class="text-danger"></span>
	</div>
	<div class="form-group">
		@*<label asp-for="BirthDate" class="control-label"></label>*@
		<input asp-for="BirthDate" class="form-control rounded-left" placeholder="BirthDate">
		<span asp-validation-for="BirthDate" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="Gender" class="control-label"></label><br>
		<input type="radio" id="gender" name="gender" value="0">
		<label for="0">Male</label><br>
		<input type="radio" id="gender" name="gender" value="1">
		<label for="1">Female </label><br>
		<span asp-validation-for="Gender" class="text-danger"></span>
	</div>
	<div class="form-group">
		@*<label asp-for="Phone" class="control-label"></label>*@
		<input asp-for="Phone" class="form-control rounded-left" placeholder="Phone">
		<span asp-validation-for="Phone" class="text-danger"></span>
	</div>
	<div class="form-group">
		@*<label asp-for="AddressName" class="control-label"></label>*@
		<input asp-for="AddressName" class="form-control rounded-left" placeholder="AddressName">
		<span asp-validation-for="AddressName" class="text-danger"></span>
	</div>
	<div class="form-group">
		@*<label asp-for="PostalCode" class="control-label"></label>*@
		<input asp-for="PostalCode" class="form-control rounded-left" placeholder="PostalCode">
		<span asp-validation-for="PostalCode" class="text-danger"></span>
	</div>
	<div class="form-group">
		@*<label asp-for="CityName" class="control-label"></label>*@
		<input asp-for="CityName" class="form-control rounded-left" placeholder="CityName">
		<span asp-validation-for="CityName" class="text-danger"></span>
	</div>
	<div class="form-group">
		@*<label asp-for="CountryName" class="control-label"></label>*@
		<input asp-for="CountryName" class="form-control rounded-left" placeholder="CountryName">
		<span asp-validation-for="CountryName" class="text-danger"></span>
	</div>
	<div class="form-group">
		@*<label asp-for="Password" class="control-label"></label>*@
		<input asp-for="Password" type="password" class="form-control rounded-left" placeholder="Password">
		<span asp-validation-for="Password" class="text-danger"></span>
	</div>
	<div class="form-group">
		@*<label asp-for="ConfirmPassword" class="control-label"></label>*@
		<input asp-for="ConfirmPassword" type="password" class="form-control rounded-left" placeholder="ConfirmPassword">
		<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
	</div>
	<div class="form-group">
		<input type="submit" value="Register" class="btn btn-primary rounded submit p-3 px-5" />
	</div>
</form>
@* </div>
</div>*@

@*<div>
    <a asp-controller="Home" asp-action="Index">Back to List</a>
</div>*@

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
