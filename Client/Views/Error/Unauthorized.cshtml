@{
	Layout = null;
}

@*<h1>Unauthorized</h1>
<h3>Kamu tidak memiliki kredensial yang valid</h3>*@
<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>401 Unauthorized</title>
	<style>
		@@import url("https://fonts.googleapis.com/css?family=Roboto:300,400,500,700,900|Roboto+Slab:400,700");

		html,
		body {
			width: 100%;
			height: 100%;
			margin: 0;
		}

		* {
			font-family: "Roboto", Helvetica, Arial, sans-serif;
			box-sizing: border-box;
		}

		#app {
			padding: 1rem;
			background: black;
			display: flex;
			height: 100%;
			justify-content: center;
			align-items: center;
			color: #fafafa;
			text-shadow: 0px 0px 10px;
			font-size: 6rem;
			flex-direction: column;
		}

			#app .txt {
				font-size: 1.8rem;
			}

		/*@@keyframes blink {
			0% {
				opacity: 0;
			}

			49% {
				opacity: 0;
			}

			50% {
				opacity: 1;
			}

			100% {
				opacity: 1;
			}
		}*/

		#app .txt2 {
			font-size: 1rem;
		}

		#app .txt3 {
			font-size: 1rem;
		}

		@@keyframes blink {
			0% {
				opacity: 0;
			}

			49% {
				opacity: 0;
			}

			50% {
				opacity: 1;
			}

			100% {
				opacity: 1;
			}
		}

		.blink {
			animation-name: blink;
			animation-duration: 1s;
			animation-iteration-count: infinite;
		}
	</style>
</head>

<body>
	<div id="app">
		@*<div>401</div>*@
		<div class="txt"> 401 | Unauthorized </div>
		<div class="txt2"> Please login... </div>
		<div class="txt3"> Redirect after 5 seconds...<span class="blink">_</span></div>
	</div>

	<div id="counter">5</div>
	<script>
		setInterval(function () {
			var div = document.querySelector("#counter");
			var count = div.textContent * 1 - 1;
			div.textContent = count;
			if (count <= 0) {
				window.location.replace("https://localhost:7099/Account/Login");
			}
		}, 1000);
	</script>
</body>

</html>